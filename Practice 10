<!-- Z-index and CSS3  -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Z-index</title>

    <style>
      :root {
        --new-color: black;
      }
      div {
        height: 200px;
        width: 200px;
      }

      #div1 {
        background: var(--new-color);
      }
      #div2 {
        background: green;
        position: absolute;
        left: 150px;
        top: 150px;
      }
    </style>
  </head>
  <body>
    <div id="div1"></div>
    <div id="div2"></div>
  </body>
</html>
